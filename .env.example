# Fabrik Environment Configuration
# Copy to .env and fill in your values
# NEVER commit .env to git

# =============================================================================
# VPS Connection
# =============================================================================
VPS_HOST=172.93.160.197
VPS_USER=deploy
# VPS_SSH_KEY=~/.ssh/id_rsa  # Optional, uses default if not set

# =============================================================================
# Coolify API
# =============================================================================
COOLIFY_API_URL=https://coolify.yourdomain.com
COOLIFY_API_TOKEN=

# =============================================================================
# DNS - Namecheap
# =============================================================================
NAMECHEAP_API_USER=
NAMECHEAP_API_KEY=
NAMECHEAP_CLIENT_IP=  # Your whitelisted IP for API access

# =============================================================================
# DNS - Cloudflare (Phase 4+, optional)
# =============================================================================
# CLOUDFLARE_API_TOKEN=
# CLOUDFLARE_ZONE_ID=

# =============================================================================
# Backblaze B2 (Backups)
# =============================================================================
B2_KEY_ID=
B2_APPLICATION_KEY=
B2_BUCKET_NAME=fabrik-backups

# =============================================================================
# Database (shared PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://fabrik:password@localhost:5432/fabrik

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
