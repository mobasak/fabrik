{
  "description": "Windsurf Cascade hooks for Fabrik enforcement",
  "hooks": [
    {
      "event": "pre_write_code",
      "command": "python3 -m scripts.enforcement.validate_conventions --strict ${WINDSURF_FILES:-}",
      "description": "Enforce Fabrik coding standards before writing",
      "timeout": 15,
      "cwd": "/opt/fabrik"
    },
    {
      "event": "post_write_code",
      "command": "python3 /opt/fabrik/.factory/hooks/secret-scanner.py",
      "description": "Scan for hardcoded secrets after writing",
      "timeout": 10,
      "cwd": "/opt/fabrik"
    }
  ]
}
