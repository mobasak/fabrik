# WordPress Site: {{ name }}
# Domain: {{ domain }}
# Generated: {{ timestamp }}

# Database
DB_NAME={{ name | replace('-', '_') }}_wp
DB_USER={{ name | replace('-', '_') }}_user
DB_PASSWORD={{ db_password }}
DB_ROOT_PASSWORD={{ db_root_password }}

# WordPress
WORDPRESS_DEBUG={{ debug | default('false') }}

# R2 Backup (from Fabrik master .env)
R2_ENDPOINT={{ r2_endpoint }}
R2_ACCESS_KEY={{ r2_access_key }}
R2_SECRET_KEY={{ r2_secret_key }}
R2_BUCKET={{ r2_bucket | default('fabrik-backups') }}

# Site Config
SITE_URL=https://{{ domain }}
SITE_NAME={{ name }}
